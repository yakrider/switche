{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "frontendDist": "../switche-front/out/webapp",
    "devUrl": "http://127.0.0.1:4173"
  },
  "bundle": {
    "active": true,
    "icon": [
      "switche.ico"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "switche.ico"
      }
    },
    "shortDescription": "Switche",
    "longDescription": "Switche - Searchable Task Switcher",
    "resources": [],
    "targets": "nsis"
  },
  "productName": "Switche",
  "mainBinaryName": "Switche",
  "version": "2.4.0",
  "identifier": "com.yakrider.switche",
  "plugins": {},
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Switche - Searchable Task Switcher",
        "x": 300,
        "y": 10,
        "width": 600,
        "height": 650,
        "minWidth": 600,
        "minHeight": 650,
        "maximizable": false,
        "minimizable": false,
        "decorations": false,
        "transparent": true,
        "focus": false,
        "visible": false,
        "skipTaskbar": true,
        "additionalBrowserArgs": "--disable-features=msWebOOUI,msPdfOOUI,msSmartScreenProtection,ElasticOverscroll",
        "useHttpsScheme": true
      }
    ],
    "security": {
      "csp": null
    }
  }
}
