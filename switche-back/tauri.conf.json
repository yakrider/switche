{
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://127.0.0.1:4173",
    "distDir": "../switche-front/out/webapp",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Switche",
    "version": "2.2.8"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "globalShortcut": {
        "all": true
      },
      "window": {
        "close": true,
        "show": true,
        "hide": true,
        "setFocus": true,
        "setAlwaysOnTop": true,
        "startDragging": true
      },
      "fs": {
        "all": true
      },
      "process": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "icon": ["switche.ico"],
      "identifier": "com.yakrider.switche",
      "shortDescription": "Switche",
      "longDescription": "Switche - Searchable Task Switcher",
      "resources": [],
      "targets": "nsis",
      "windows": {
        "nsis": {
          "installerIcon": "switche.ico"
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Switche - Searchable Task Switcher",
        "x": 300,
        "y": 10,
        "width": 600,
        "height": 650,
        "decorations": false,
        "transparent": true,
        "focus": false,
        "visible": false,
        "skipTaskbar": true,
        "additionalBrowserArgs": "--disable-features=msWebOOUI,msPdfOOUI,msSmartScreenProtection,ElasticOverscroll"
      }
    ],
    "systemTray": {
      "iconPath": "switche.ico"
    }
  }
}
